<form action="#/catalog/create" method="post">


    <div class="form-group">
        <img id="test1" data-snimka-id="1KriloLqvoOtvarqneNaklanqne.png" src="../../../snimki/1KriloLqvoOtvarqneNaklanqne.png" alt="">
    </div>


    <div class="form-group">
        <select name="selectClient" id="selectClient">
            {{#each clients}}
            <option value="{{name}}">{{name}}</option>
            {{/each}}
        </select>
    </div>


    <div class="form-group">
        <label for="profilMaterial">Избери Материал: </label>
        <select class="form-control" name="profilMaterial" id="profilMaterial">
            <option value=""></option>
            <option value="pvc">PVC</option>
            <option value="aluminium">Aluminium</option>
        </select>
        <div id="selectProfilPanel"></div>

    </div>

    <div class="form-group">
        <label for="width">Ширина: </label>
        <input class="form-control" type="text" id="width" name="width" />
    </div>

    <div class="form-group">
        <label for="height">Височина: </label>
        <input class="form-control" type="text" id="height" name="height" />
    </div>

    <div class="form-group">
        <label for="staklopaket">Стаклопакет: </label>
        <select class="form-control" name="staklopaket" id="staklopaket">
            <option value=""></option>
            <option value="dvoen">Двоен</option>
            <option value="troen">Троен</option>
        </select>

        <div id="selectGlassPanel"></div>


    </div>

    

    <p>Please select your preferred contact method:</p>
    <div>
        <input type="radio" id="checkBoxShtora" name="contact" value="shtora">
        <label for="checkBoxShtora">Щора</label>
        <div id="forselectShtora"></div>
        

        <input type="radio" id="checkBoxKapak" name="contact" value="phone">
        <label for="checkBoxKapak">Капаци</label>
        <div id="forselectKapakRadio"></div>
        

        <input type="radio" id="radioBoxEmpty" name="contact" value="mail">
        <label for="radioBoxEmpty">Празно</label>
    </div>

    <div class="form-group">
        <label for="checkBoxShtora">Щора: </label>
        <input id="checkBoxShtora" type="checkbox" name="checkBoxShtora" />
        <div id="forselect"></div>
    </div>

    <div class="form-group">
        <label for="checkBoxKapak">Капаци: </label>
        <input id="checkBoxKapak" type="checkbox" name="checkBoxKapak" />
        <div id="forselectKapak"></div>
    </div>

    <div class="form-group">
        <label for="checkBoxMreja">Мрежа: </label>
        <input id="checkBoxMreja" type="checkbox" name="checkBoxMreja" />
        <div id="forSelectMreja"></div>
    </div>

    <input class="btn btn-default" type="submit" value="Create Frame" />
</form>